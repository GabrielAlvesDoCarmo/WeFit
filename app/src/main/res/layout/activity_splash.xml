<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.view.activity.SplashActivity">

    <TextView
        android:id="@+id/txtWe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/we_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtFit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtFit"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtFit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fit"
        android:textColor="@color/black"
        android:textSize="@dimen/we_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />
</androidx.constraintlayout.widget.ConstraintLayout>